buildscript {
  repositories {
    jcenter()
    mavenCentral()
    maven { url 'http://oss.jfrog.org/artifactory/oss-snapshot-local/' }    
  }
  dependencies {    
    classpath "org.ajoberstar:gradle-git:1.5.1"
  }
}

plugins {  
  id "org.sonarqube" version "2.6.2"
  id "com.moowork.node" version "1.2.0"
}

apply plugin: 'base' // Requirede by the clean task if no other plugin that extends it exists (e.g. the Java plugin)
apply plugin: 'com.moowork.node'
apply plugin: 'idea'
apply plugin: 'org.ajoberstar.github-pages'
apply plugin: 'checkstyle'




repositories {
  mavenLocal()
  mavenCentral()
}

dependencies {  

}


sonarqube {
  properties {
    property 'sonar.host.url', 'https://sonarcloud.io'
    property 'sonar.organization', 'sitmun'
    properties["sonar.sources"] = 'projects'    
  }
}


def cacheDir = project.hasProperty("cacheDir")? project.properties.cacheDir : "${project.buildDir}" 

task npmBuildSitmunFrontendCore(type: NpmTask, dependsOn: ['npmInstall']) {
    description = 'Build module sitmun-frontend-core.'
    args = ['run-script', 'build-sitmun-frontend-core']
}

task install(dependsOn: npmBuildSitmunFrontendCore)

task npmCreateCompodocs(type: NpmTask, dependsOn: ['npmBuildSitmunFrontendCore', 'npmInstall']) {
  description = 'Create compodocs por sitmun-plugin-core.'
  args = ['run-script', 'compodoc']
}

task npmPublish(type: NpmTask, dependsOn: ['npmBuildSitmunFrontendCore', 'npmInstall']) {
  description = 'Publish @sitmun/frontend-core to GitHub packages registry'
  args = ['run-script', 'publish']
}


clean {
  delete "node_modules"
  delete "dist"
  delete "${cacheDir}"
}

//
// Documentation
//


//
// Code quality tasks
//

checkstyle {
  toolVersion = "8.24"
  configFile = file("${project.rootDir}/checkstyle.xml")
}
